<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/quantity_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="@dimen/big_padding"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/quantity_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_message"
        android:layout_alignParentLeft="true"
        android:text="-"
        android:textSize="30sp"
        app:backgroundTint="#ffcccc" />
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_message"
        android:layout_toRightOf="@+id/quantity_decrement"
        android:layout_toLeftOf="@+id/quantity_increment"
        android:layout_alignTop="@+id/quantity_decrement"
        android:layout_alignBottom="@+id/quantity_decrement"
        android:gravity="center"
        android:textSize="30sp"
        android:text="0"/>

    <Button
        android:id="@+id/quantity_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_message"
        android:layout_alignParentRight="true"
        android:text="+"
        android:textSize="30sp"
        app:backgroundTint="#ffcccc" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch" />
</RelativeLayout>